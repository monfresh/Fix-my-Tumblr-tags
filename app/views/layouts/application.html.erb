<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Fix My Tumblr Tags" %></title>
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
    <meta name="description" content="Fix your Tumblr tags with this app">
    <meta name="author" content="Moncef Belyamani">
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body>
    <header class="navbar navbar-fixed-top">
      <nav class="navbar-inner">
        <div class="container">
          <%= render 'layouts/navigation' %>
        </div>
      </nav>
    </header>
    <div id="main" role="main">
      <div class="container">
        <div class="content">
           <div class="row">
            <div class="span12">
              <% flash.each do |name, msg| %>
                <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
                  <a class="close" data-dismiss="alert">Ã—</a>
                  <%= msg %>
                </div>
              <% end %>
              <%= yield %>
            </div>
          </div>
          <footer class="footer">
           Copyright (c) 2012 <%= link_to "Moncef Belyamani", "http://moncefbelyamani.com/about" %>. A project by <%= link_to "@monfresh", "http://twitter.com/monfresh" %>. Powered by the <%= link_to "Tumblr API", "http://www.tumblr.com/docs/en/api/v2" %>.
          </footer>
        </div>
      </div> <!--! end of .container -->
    </div> <!--! end of #main -->
  </body>
</html>